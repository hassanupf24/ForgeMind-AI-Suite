# === Application ===
APP_NAME=ForgeMind-AI
APP_VERSION=2.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# === FastAPI ===
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# === PostgreSQL ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=forgemind
POSTGRES_USER=forgemind
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# === TimescaleDB ===
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=forgemind_ts
TIMESCALE_USER=forgemind
TIMESCALE_PASSWORD=changeme
TIMESCALE_URL=postgresql+asyncpg://${TIMESCALE_USER}:${TIMESCALE_PASSWORD}@${TIMESCALE_HOST}:${TIMESCALE_PORT}/${TIMESCALE_DB}

# === Apache Kafka ===
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=forgemind-consumers
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true

# === MQTT ===
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=forgemind-mqtt

# === Redis ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# === OPC-UA ===
OPCUA_SERVER_URL=opc.tcp://localhost:4840
OPCUA_NAMESPACE_URI=urn:forgemind:opcua
OPCUA_SECURITY_POLICY=Basic256Sha256

# === Auth / JWT ===
JWT_SECRET_KEY=change-me-use-openssl-rand-hex-64
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
OAUTH2_PROVIDER_URL=

# === Observability ===
OTEL_SERVICE_NAME=forgemind-ai
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
JAEGER_ENDPOINT=http://localhost:14268/api/traces
